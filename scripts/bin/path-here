#!/bin/bash
input_path="${1:-${PWD}}"
path_to_add="$(realpath ${input_path})"

if [[ -d "${path_to_add}" ]]; then
  if ! grep --quiet "${path_to_add}" <<< "${PATH}"; then
    export PATH=${path_to_add}:$PATH
  fi

  echo $PATH \
  | tr ':' '\n' \
  | grep "${path_to_add}"
else
  cat <<EOF
  
  It does not exist:

    ${path_to_add}

EOF
fi
