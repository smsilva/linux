#!/bin/bash

delete() {
  FILE_NAME=$1

  [ -e ${FILE_NAME?} ] && echo ${FILE_NAME?} && rm -rf ${FILE_NAME?}
}

delete .terraform
delete .terraform.*
delete terraform.tfstate
delete terraform.tfstate.backup

for FILE in $(find -name terragrunt-debug.tfvars.json); do
  delete ${FILE}
done

for FILE in $(find -name .terragrunt-cache); do
  delete ${FILE}
done
