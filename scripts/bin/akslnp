#!/bin/bash
FILTER_PARAMETER="${1}"

DATA_FILE=$(mktemp)

az aks list \
  --output table \
| sed '1,2d' \
| egrep "${FILTER_PARAMETER}" > "${DATA_FILE}"

LINE_COUNT=$(cat ${DATA_FILE} | wc -l)

if [ "${LINE_COUNT}" == 0 ]; then
  exit 1
fi

echo "LINE_COUNT.: ${LINE_COUNT}"

if [ "${LINE_COUNT}" == 1 ]; then
  LINE=$(cat ${DATA_FILE})
else
  LINE=$(cat ${DATA_FILE} | fzf)
fi

if [ -z "${LINE}" ]; then
  exit 1
fi

AKS_CLUSTER_NAME=$(                awk '{ print $1 }' <<< "${LINE}")
AKS_CLUSTER_RESOURCE_GROUP_NAME=$( awk '{ print $3 }' <<< "${LINE}")

echo ""
echo "${AKS_CLUSTER_NAME?}"
echo ""

az aks nodepool list \
  --cluster-name ${AKS_CLUSTER_NAME?} \
  --resource-group ${AKS_CLUSTER_RESOURCE_GROUP_NAME?} \
  --output table
