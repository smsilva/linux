#!/bin/bash
COMMAND_NAME="${1}"

FILE_PATH=$(which "${COMMAND_NAME}" 2> /dev/null)

if [[ -n "${FILE_PATH}" ]]; then
  bat "${FILE_PATH}"
else
  ALIAS_CONFIGURATION=$(alias "${COMMAND_NAME}" 2> /dev/null)

  if [[ -n "${ALIAS_CONFIGURATION}" ]]; then
    echo "${ALIAS_CONFIGURATION}"
  else
    echo "No binary or alias found: ${COMMAND_NAME}"
  fi
fi
