#!/bin/bash
clear

OPTIONAL_NAME_PARAMETER=$1

LINE=$(az aks list \
  --output table | sed 1,2d | awk '{ print $1,$3,$2 }' | grep -E "${OPTIONAL_NAME_PARAMETER}.*" | sort -u | column -t | fzf)

if [[ $? -eq 0 ]]; then
  AKS_CLUSTER_NAME=$(awk '{ print $1 }' <<< ${LINE})
  AKS_CLUSTER_RESOURCE_GROUP_NAME=$(awk '{ print $2 }' <<< ${LINE})

  echo "name/resource-group-name: ${AKS_CLUSTER_NAME} ${AKS_CLUSTER_RESOURCE_GROUP_NAME}"
  echo ""

  az aks get-credentials \
    --name ${AKS_CLUSTER_NAME?} \
    --resource-group ${AKS_CLUSTER_RESOURCE_GROUP_NAME?} \
    --overwrite-existing \
    --admin 2> /dev/null

  RESULT=$?

  if [ ${RESULT} -ne 0 ]; then
    az aks get-credentials \
      --name ${AKS_CLUSTER_NAME?} \
      --resource-group ${AKS_CLUSTER_RESOURCE_GROUP_NAME?} \
      --overwrite-existing

    RESULT=$?
  fi

  if [ ${RESULT} -eq 0 ]; then
    echo ""
    kubectl config get-contexts
  fi
fi
