#!/bin/bash
INPUT_PATH="${1}"
COMMAND="${2}"

open_with_vscode() {
  FILE="${1}"
  echo "${FILE}"
  code "${FILE}" &> /dev/null
  exit 0
}

if [ -n "${INPUT_PATH}" ]; then
  if [ -f "${INPUT_PATH}" ]; then
    open_with_vscode "${INPUT_PATH}"    
  else
    if [ -d "${INPUT_PATH}" ]; then
      INPUT_PATH=$(fpa "${INPUT_PATH}")
      open_with_vscode "${INPUT_PATH}"
    fi
  fi
else
  open_with_vscode "$(fpa)"
fi
